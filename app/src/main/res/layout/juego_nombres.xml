        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="20dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView">

        <Button
            android:id="@+id/btn_resp1"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_resp2"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/btn_resp1" />

        <Button
            android:id="@+id/btn_resp3"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/btn_resp2" />

        <Button
            android:id="@+id/btn_resp4"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/btn_resp3" />

        <Button
            android:id="@+id/btn_resp5"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
