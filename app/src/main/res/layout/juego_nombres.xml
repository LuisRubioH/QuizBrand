            android:onClick="onClickNumber10"
            app:layout_constraintStart_toEndOf="@id/btn9" />

        <Button
            android:id="@+id/btn11"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClickNumber11"
            app:layout_constraintStart_toEndOf="@id/btn10" />

        <Button
            android:id="@+id/btn12"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClickNumber12"
            app:layout_constraintStart_toEndOf="@id/btn11" />

        <Button
            android:id="@+id/btn13"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClickNumber13"
            app:layout_constraintStart_toEndOf="@id/btn12" />

        <Button
            android:id="@+id/btn14"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="2dp"
            android:layout_weight="1"
            android:onClick="onClickNumber14"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/btn13" />
    </LinearLayout>

    <Button
        android:id="@+id/btn_continue"
        android:layout_width="15dp"
        android:layout_height="15dp"
        android:layout_marginBottom="13dp"
        android:layout_marginLeft="0dp"
        app:layout_constraintBottom_toTopOf="@+id/linearLayoutAnswerDown"
        app:layout_constraintStart_toEndOf="@+id/linearLayoutAnswerUp" />

    <Button
        android:id="@+id/btn_score"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:layout_marginRight="24dp"
        android:layout_marginTop="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>