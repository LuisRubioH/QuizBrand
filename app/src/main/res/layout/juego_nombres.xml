            app:layout_constraintStart_toEndOf="@+id/btn_resp5" />

        <Button
            android:id="@+id/btn_resp7"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/btn_resp6" />

        <Button
            android:id="@+id/btn_resp8"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toEndOf="@+id/btn_resp7" />

    </LinearLayout>

    <LinearLayout
        android:id="@+id/linearLayoutAnswerDown"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayoutAnswerUp">

        <Button
            android:id="@+id/btn_resp9"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:onClick="onClickResp"
            android:text=""
            app:layout_constraintStart_toStartOf="parent" />

        <Button
            android:id="@+id/btn_resp10"
            android:layout_width="40dp"
